#include <dt-bindings/clock/imx7d-clock.h>
#include "../../../../arch/arm/boot/dts/imx7d-pinfunc.h"

/dts-v1/;
/plugin/;
/ {
	fragment@0 {
		target = <&iomuxc>;
		__overlay__ {
			addon-intf1 {
				pinctrl_uart1: uart1grp {
					fsl,pins = <
						MX7D_PAD_ENET1_TX_CLK__GPIO7_IO12	0x00	/* INTF1_32 */
						MX7D_PAD_ENET1_RX_CLK__GPIO7_IO13	0x00	/* INTF1_33 */
						MX7D_PAD_UART1_TX_DATA__UART1_DCE_TX	0x00	/* INTF1_40 */
						MX7D_PAD_UART1_RX_DATA__UART1_DCE_RX	0x70	/* INTF1_41 */
					>;
				};
			};
		};
	};

	fragment@1 {
		target = <&uart1>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart1>;

			linux,rs485-enabled-at-boot-time;
			rs485-rts-active-high;
			rts-gpios = <&gpio7 12 0>;
			fsl,uart-has-rtscts;
			status = "okay";
		};
	};
};
